      <Button fx:id="btnPlaylistDelete" layoutX="198.0" layoutY="503.0" mnemonicParsing="false" onAction="#btnPlaylistDeleteActionPerformed" text="Delete" />
      <Button fx:id="btnTblSongsNew" layoutX="548.0" layoutY="503.0" mnemonicParsing="false" onAction="#btnTblSongsNewActionPerformed" text="New" />
      <Button fx:id="btnTblSongsDelete" layoutX="834.0" layoutY="503.0" mnemonicParsing="false" onAction="#btnTblSongsDeleteActionPerformed" text="Delete" />
      <Button fx:id="btnClose" layoutX="885.0" layoutY="528.0" mnemonicParsing="false" onAction="#btnCloseActionPerformed" text="Close" />
